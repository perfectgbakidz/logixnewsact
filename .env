# ============================================================================
# Database Configuration
# ============================================================================

# Option 1: Local PostgreSQL
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/logic_newsact

# Option 2: Supabase PostgreSQL
# Get this from Supabase Dashboard > Settings > Database > Connection String
# Format: postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
# Render commonly provides: postgresql://... (this app auto-converts to asyncpg)
DATABASE_URL=postgresql+asyncpg://postgres:password@db.projectref.supabase.co:5432/postgres

# Supabase Configuration (optional - for Supabase client features)
# Get these from Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Supabase Storage Configuration
# Default bucket for file uploads (will be created if doesn't exist)
SUPABASE_STORAGE_BUCKET=public
# Enable public access to uploaded files
SUPABASE_STORAGE_PUBLIC=true

# Database Pool Settings (important for Supabase - free tier has ~60 connection limit)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ============================================================================
# JWT Configuration
# ============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=https://logicnewsact.ng,http://localhost:3000
TRUSTED_HOSTS=logicnewsact.ng,*.logicnewsact.ng,localhost,127.0.0.1

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=Logic News Act API
DEBUG=False
